<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/addConnnection_serviceSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Switch
        android:id="@+id/oauthVerify"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="Verify Account" />

    <com.badgercubed.ContactWallet.widget.PrefixEditText
        android:id="@+id/addConnection_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:tag="prefix" />

    <EditText
        android:id="@+id/addConnection_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="Description (Optional)"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/addConnnection_protectionLevelSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

</LinearLayout>