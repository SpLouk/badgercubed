<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    android:background="@drawable/bg1"
    tools:context="com.badgercubed.ContactWallet.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo_backup2" />

        <EditText
            android:id="@+id/register_enterEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="16dp"
            android:paddingStart="10dp"
            android:hint="Email: "
            android:background="@drawable/rounded_white"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/register_enterPassword"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_white"
            android:layout_margin="16dp"
            android:hint="Password: "
            android:inputType="textVisiblePassword"/>


        <EditText
            android:id="@+id/register_enterName"
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_white"
            android:layout_margin="16dp"
            android:hint="Name: "
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/register_enterPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="16dp"
            android:paddingStart="10dp"
            android:hint="Phone #: "
            android:background="@drawable/rounded_white"
            android:inputType="phone"/>

        <Button
            android:id="@+id/register_register"
            android:layout_gravity="center_horizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Register"/>

        <TextView
            android:id="@+id/register_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:text="Already a user? Log in here"/>
    </LinearLayout>
</RelativeLayout>